---
import LinkToTagPage from '@/components/LinkToTagPage.astro';
import sortById from '@/utils/sortById';
import * as Config from '@/config';

import { File, Github, Instagram, Mail, Twitter, UserRound } from 'lucide-preact';

import { getCollection } from 'astro:content';

const blog = await getCollection('blog');
const tags = [...new Set(blog.flatMap((p) => p.data.tags))].sort();
---

<footer class="bg-gray-50 py-7 text-darkgray">
  <div class="container mx-auto flex flex-row flex-wrap justify-between px-2">
    <div class="mb-7 basis-full md:basis-[39%] xl:basis-[28%]">
      <div class="mb-4 flex items-center space-x-1.5">
        <UserRound strokeWidth={2.25} />
        <h4 class="text-lg font-bold">About Me</h4>
      </div>

      <div class="flex items-start space-x-4">
        <div class="h-16 basis-16">
          <img class="rounded-full" src={Config.author.avatar} />
        </div>
        <div class="flex flex-col space-y-1">
          <h5 class="font-bold">
            <a class="text-sky-700 underline" href="/">
              {Config.author.nickname}
            </a>
          </h5>
          <span>{Config.author.shortbio}</span>
          <div class="flex space-x-3">
            <a href={`https://twitter.com/intent/user?user_id=${Config.author.social.twitterId}`} class="hover:text-sky-700 active:text-sky-700" title="Twitter" target="_blank" rel="nofollow noopener">
              <Twitter />
            </a>
            <a href={`https://github.com/${Config.author.social.github}`} class="hover:text-sky-700 active:text-sky-700" title="GitHub" target="_blank" rel="nofollow noopener">
              <Github />
            </a>
            <a href={`https://www.instagram.com/${Config.author.social.instagram}`} class="hover:text-sky-700 active:text-sky-700" title="Instagram" target="_blank" rel="nofollow noopener">
              <Instagram />
            </a>
            <a href={`mailto:${Config.author.social.email}`} class="hover:text-sky-700 active:text-sky-700" title="Mail">
              <Mail />
            </a>
          </div>
        </div>
      </div>
    </div>

    <div class="mb-7 basis-full md:block md:basis-[59%] xl:basis-[42%]">
      <div class="mb-4 flex items-center space-x-1.5">
        <File strokeWidth={2.25} />
        <h4 class="text-lg font-bold">Recent Articles</h4>
      </div>

      <ul class="list-disc pl-7">
        {
          sortById(blog)
            .slice(0, 5)
            .map((p) => (
              <li>
                <a class="text-sky-700 underline" href={`/blog/${p.slug}/`}>
                  {' '}
                  {p.data.title}{' '}
                </a>
              </li>
            ))
        }
      </ul>
    </div>

    <div class="mb-7 basis-full xl:basis-[28%]">
      <div class="mb-4 flex items-center space-x-1.5">
        <File strokeWidth={2.25} />
        <h4 class="hont-bold text-lg">Tags</h4>
      </div>

      <div class="flex flex-wrap items-start gap-x-2 gap-y-1">
        {
          tags.map((t) => (
            <span class="flex">
              <LinkToTagPage tag={t} />
            </span>
          ))
        }
      </div>
    </div>
  </div>

  <div class="container mx-auto px-2 text-right text-sm">
    {Config.site.footer} Site generated by <a class="text-sky-700 underline" href="https://astro.build/">{Astro.generator}</a>.
  </div>
</footer>
