---
import type { FontawesomeObject } from '@fortawesome/fontawesome-svg-core';

export interface Props {
  object: FontawesomeObject;
  class?: string;
}

const { class: classNames, object } = Astro.props;
---

{
  object.abstract.map(({ attributes, children, tag: Tag }) => (
    <Tag {...attributes} class:list={[attributes['class'], classNames]}>
      {children?.map(function f({ attributes, children, tag: Tag }) {
        return <Tag {...attributes}>{children?.map(f)}</Tag>;
      })}
    </Tag>
  ))
}
